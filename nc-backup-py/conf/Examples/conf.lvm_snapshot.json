{
  "GENERAL": {
    "HOSTNAME": "srv-pfizer-drupal-stage-web1",
    "WORK_FOLDER": "/opt/backup/glusterfs_backup/",
    "HOME_FOLDER": "/var/lib/nc-backup-py/",
    "LOG_FOLDER": "/var/log/nc-backup-py/nc-backup-py.log",
    "MESSAGE_CONFIG_COMMAND": "https://backupreporter.service.chinanetcloud.com/backup_report_service/backup_service.php",
    "MESSAGE_CONFIG_METHOD": "post",
    "__Methods": "post|e-mail|sms|wechat,etc"
  },
  "LVMSNAPSHOT": {
    "ACTION": "load",
    "FROM": "rsync",
    "FILENAME": "rsync",
    "CLASS": "RsyncBackup",
    "PARAMETERS": {
      "LOG_INTERNAL": "yes",
      "ORIGIN_AND_TARGETS_PARAMS": {
        "SNAPSHOT": "sudo lvcreate --snapshot --size=35G --name glrbr1_snap /dev/mapper/domuvg-glrbr1",
        "MKMOUNTDIR": "sudo mkdir /mnt/ncbackup_snap_mount",
        "MOUNTSNAP": "sudo mount -o nouuid /dev/mapper/domuvg-glrbr1_snap /mnt/ncbackup_snap_mount"
      }
    }
  },
  "FILESET": {
    "ACTION": "execute",
    "NAME": "filesbackup",
    "PARAMETERS": {
      "FILESET_INCLUDE": "/etc /opt/ncscripts /mnt/glusterfs/www/ /mnt/ncbackup_snap_mount",
      "FILESET_EXCLUDE": "",
      "TAR_COMMAND": "sudo /bin/tar --warning=no-file-changed -C / -zcf"
      }
    },
  "COMPRESSION": {
    "ACTION": "execute",
    "NAME": "compression",
    "PARAMETERS": {
      "TARGETS": "/opt/backup/glusterfs_backup/files",
      "DESTINATION":"/opt/backup/glusterfs_backup/compressed",
      "REMOVE_TARGETS": "True",
      "TAR_COMMAND": "sudo /bin/tar --warning=no-file-changed -C / -zcf"
    }
  },
  "ENCRYPTION": {
    "ACTION": "execute",
    "NAME": "encryption",
    "PARAMETERS": {
      "TARGETS": "/opt/backup/glusterfs_backup/compressed",
      "DESTINATION":"/opt/backup/glusterfs_backup/encrypted",
      "REMOVE_TARGETS": "True"
    }
  },
  "SIZE": {
    "ACTION": "load",
    "FROM": "tools",
    "FILENAME": "size_calculation",
    "CLASS": "SizeCalculation",
    "PARAMETERS": {
      "TARGETS": "/opt/backup/glusterfs_backup/encrypted"
    }
  },
  "STORAGE_OSS": {
    "ACTION": "execute",
    "NAME": "storage",
    "PARAMETERS":{
      "DESTINATION":"oss",
      "ACTION": "upload",
      "OBJECTIVES": "/opt/backup/glusterfs_backup/encrypted",
      "ARGS_DICT": "{}",
      "__READTHIS": "Use alicmd -c to configure oss access and bucket.",
      "REMOVE_TARGETS": "False"
    }
  },
  "STORAGE_LOCAL": {
    "ACTION": "execute",
    "NAME": "storage",
    "PARAMETERS":{
      "DESTINATION": "local",
      "TARGETS": "/opt/backup/glusterfs_backup/encrypted",
      "ARGS_DICT": "{'LOCAL_BACKUP': '/opt/backup/glusterfs_backup/local/'}",
      "REMOVE_TARGETS": "True"
    }
  },
  "CLEANUPLVM": {
    "ACTION": "load",
    "FROM": "rsync",
    "FILENAME": "rsync",
    "CLASS": "RsyncBackup",
    "PARAMETERS": {
      "LOG_INTERNAL": "yes",
      "ORIGIN_AND_TARGETS_PARAMS": {
        "UMOUNTSNAP": "sudo umount /mnt/ncbackup_snap_mount",
        "RMMOUNTDIR": "rm -r /mnt/ncbackup_snap_mount",
        "RMSNAPSHOT": "sudo lvremove -f /dev/mapper/domuvg-glrbr1_snap"
      }
    }
  }
}
