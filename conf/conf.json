{
  "GENERAL": {
    "HOSTNAME": "srv-nc-py27-vbox-vagrant-db1",
    "WORK_FOLDER": "/opt/backup",
    "LOCAL_BACKUP": "/opt/backup/local",
    "HOME_FOLDER": "/vagrant/nc-backup-py",
    "LOG_FOLDER": "/var/log/nc-backup-py/nc-backup-py.log"
  },
  "FILESET":{
    "ACTION": "execute",
    "NAME": "filesbackup"
  },
  "MONGODB":{
    "ACTION": "load",
    "FROM": "mongo",
    "FILENAME": "mongo",
    "CLASS": "MongoBackup",
    "PARAMETERS":{
      "MONGO_USER": "",
      "MONGO_PWD": "",
      "MONGO_HOST": "127.0.0.1",
      "MONGODUMP_BIN": "/usr/bin/mongodump",
      "TAR_COMMAND": "sudo /bin/tar czf",
      "PREFIX_FOLDER": "mongodump",
      "DESTINATION": "/opt/backup"
    }
  },
  "COMPRESSION": {
    "ACTION": "execute",
    "NAME": "compression",
    "PARAMETERS": {
      "TARGETS": "/opt/backup/files /usr/bin/mongodump"
    }
  },
  "ENCRYPTION": {
    "ACTION": "execute",
    "NAME": "encryption"
  },
  "SIZE":{
    "ACTION": "load",
    "FROM": "tools",
    "FILENAME": "size_calculation",
    "CLASS": "SizeCalculation",
    "PARAMETERS": {
      "TARGETS": "/opt/backup/encrypted"
    }
  },
  "STORAGE": {
    "ACTION": "execute",
    "NAME": "storage",
    "PARAMETERS":{
      "DESTINATION":"s3",
      "BUCKET_NAME": "cncbackup"
    }
  }
}